#!/bin/sh
# preinst script for operator-name-cbs-widget
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
        # Remove bad dpkg-divert from version 0.1
        # In version >= 0.2 is libsms.so not diverted
        if test -f /usr/lib/libsms.so.0.0.0.distrib; then
            rm -f /usr/lib/libsms.so.0.0.0
            dpkg-divert --package operator-name-cbs-widget --rename --remove /usr/lib/libsms.so.0.0.0
        fi
        dpkg-divert --package operator-name-cbs-widget --rename --add /usr/lib/hildon-desktop/connui-cellular-operator-home-item.so
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
